.event-card-container
  width 320px
  height 280px
  margin-left auto
  margin-right auto
  margin-top 15px
  background-repeat no-repeat
  background-size cover
  &__blackout
    display inline-block
    width 100%
    height 100%
    background-color rgba(0, 0 ,0 , 0.6)

.blackout-container
  &__link
    display block
    text-decoration none
    font-size 20px
    font-weight 800
    color #ffffff
    margin-left auto
    margin-right auto
    margin-top 200px
  &__time
    font-size 17px
    font-weight 300
    color #ffffff
