.Dropdown-control
  position relative
  overflow hidden
  background-color white
  border 1px solid #ccc
  border-radius 2px
  box-sizing border-box
  color #333
  cursor default
  outline none
  padding 8px 52px 8px 10px
  transition all 200ms ease

.Dropdown-arrow
  border-color #999 transparent transparent
  border-style solid
  border-width 5px 5px 0
  content ' '
  display block
  height 0
  position absolute
  right 10px
  top 14px
  width 0

.Dropdown-menu
  background-color white
  border 1px solid #ccc
  box-shadow 0 1px 0 rgba(0,0,0,0.06)
  box-sizing border-box

.Dropdown-option
  cursor pointer
  padding 8px 10px
  &:hover
    background-color #f2f9fc
    color #333
